CREATE TABLE proveedores (
    id       INT PRIMARY KEY,
    nombre   VARCHAR2(100),
    telefono VARCHAR2(12),
    id_pieza INT
);

ALTER TABLE proveedores
    ADD CONSTRAINT fk_piezas FOREIGN KEY ( id_pieza )
        REFERENCES piezas ( idpie );

